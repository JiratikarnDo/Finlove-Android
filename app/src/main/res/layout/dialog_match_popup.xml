<!-- res/layout/dialog_match.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:clipToOutline="true"
    android:background="@drawable/button_normal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/titlematch"
        android:layout_height="wrap_content">

        <!-- ข้อความสีขอบ (ดำ) -->
        <TextView
            android:id="@+id/tvStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match!"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"/>

        <!-- ข้อความสีจริง -->
        <TextView
            android:id="@+id/tvMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match!"
            android:textColor="#0DD7E9"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="ยินดีด้วย คุณ Match กับผู้ใช้นี้แล้ว!\nแชทกับผู้ใช้นี้ได้แล้ว!"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="@id/tvMain"
        />
    <Button
        android:id="@+id/btnOk"
        android:text="ตกลง"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
